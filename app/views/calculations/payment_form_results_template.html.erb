<h1>
  Payment Results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= number_to_percentage(@user_apr, precision:4) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @user_years %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= number_to_currency(@user_pv) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= number_to_currency(@payment) %>
  </dd>
</dl>

